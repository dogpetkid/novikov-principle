with (obj_player) {

    if (
    5 &lt; distance_to_object( // check if further than 5 away from...
    instance_nearest(self.x,self.y,obj_button_red) // the nearest red button...
    ))
    {
    // then player not trapped
    with (obj_hint_restart) stuck_button = false;
    } else {
    // else player is trapped
    with (obj_hint_restart) stuck_button = true;
    }

}

// AND if the player is stuck in a wall, tell them how to restart

with (obj_player) {

    if (!place_free(self.x,self.y)) { // if within a wall (or any solid object)...
