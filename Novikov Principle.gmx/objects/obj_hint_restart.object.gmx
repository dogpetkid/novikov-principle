    with (obj_hint_restart) stuck_wall = true;
    } else {
    with (obj_hint_restart) stuck_wall = false;
    }

}

// keep pushing the timer up until they are stuck
if (!stuck_button) alarm[0] = 7*room_speed;
// wall stuck is a given to just restart
if (stuck_wall) render = true;
</string>
